update:	$(CONFIG) $(HTML) $(README) $(MAN)

Makefile: Makefile.in
	(set -e; echo "# DO NOT EDIT"; $(OPTS) $(SHELL) ../makedefs; cat $?) >$@

clean:
	:

tidy:	clean

clobber:
	rm -f $(CONFIG) $(README) $(HTML)

