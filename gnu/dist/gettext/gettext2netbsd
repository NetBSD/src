# gettext2netbsd: removes Id tag and couple of other items, for importing
# gettext tree into netbsd.
# works on current directory.

dosed() {
	sed -e 's/\$\(Author[^\$]*\) \$/\1/'	\
	    -e 's/\$\(Date[^\$]*\) \$/\1/'	\
	    -e 's/\$\(Header[^\$]*\) \$/\1/'	\
	    -e 's/\$\(Id[^\$]*\) \$/\1/'	\
	    -e 's/\$\(Locker[^\$]*\) \$/\1/'	\
	    -e 's/\$\(Log[^\$]*\) \$/\1/'	\
	    -e 's/\$\(Name[^\$]*\) \$/\1/'	\
	    -e 's/\$\(RCSfile[^\$]*\) \$/\1/'	\
	    -e 's/\$\(Revision[^\$]*\) \$/\1/'	\
	    -e 's/\$\(Source[^\$]*\) \$/\1/'	\
	    -e 's/\$\(State[^\$]*\) \$/\1/'
}

PROG=$(basename $0)

find . -type f -print | grep -v CVS | grep -v gettext2netbsd |
while read f
do
	dosed < $f > /tmp/$PROG$$ && mv /tmp/$PROG$$ $f
done
