#!/bin/sh
#
# $NetBSD: devpubd-run-hooks.in,v 1.1.2.1 2012/04/17 00:05:38 yamt Exp $
#
# devpubd run hooks

devpubd_event=$1
devpubd_device=$2
devpubd_hooks_base=@HOOKSDIR@

case $devpubd_event in
device-attach|device-detach)
	for hook in ${devpubd_hooks_base}/*; do
		if [ -x "${hook}" ]; then
			"${hook}" ${devpubd_event} ${devpubd_device}
		fi
	done
	;;
*)
	;;
esac

exit 0
