	AUTOCHECKBOX	"", IDC_CONS_CHK0, 75, 0, 10, 10
	AUTOCHECKBOX	"", IDC_CONS_CHK1, 65, 0, 10, 10
	AUTOCHECKBOX	"", IDC_CONS_CHK2, 55, 0, 10, 10
	AUTOCHECKBOX	"", IDC_CONS_CHK3, 45, 0, 10, 10
	AUTOCHECKBOX	"", IDC_CONS_CHK4, 35, 0, 10, 10
