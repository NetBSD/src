	PUSHBUTTON	"a", IDC_CONS_BTN0, 85, 0, 10, 10,
		WS_CHILD | WS_VISIBLE
	PUSHBUTTON	"b", IDC_CONS_BTN1, 95, 0, 10, 10,
		WS_CHILD | WS_VISIBLE
	PUSHBUTTON	"c", IDC_CONS_BTN2, 105, 0, 10, 10,
		WS_CHILD | WS_VISIBLE
	PUSHBUTTON	"d", IDC_CONS_BTN3, 115, 0, 10, 10,
		WS_CHILD | WS_VISIBLE
	AUTOCHECKBOX	"save to file", IDC_CONS_FILESAVE,  5, 10, 120, 10
	EDITTEXT	IDC_CONS_FILENAME   5, 20, 120, 12,
		WS_CHILD | WS_VISIBLE | WS_BORDER | WS_TABSTOP |
