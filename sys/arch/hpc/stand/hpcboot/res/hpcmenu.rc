WMain DIALOG DISCARDABLE 0, 0, 0, 0
STYLE WS_CHILD
{
	// kernel directory
	COMBOBOX	IDC_MAIN_DIR,			5,  5, 70, 120,
		WS_CHILD | WS_VISIBLE | WS_BORDER | WS_VSCROLL | WS_TABSTOP |
		CBS_DROPDOWN | CBS_AUTOHSCROLL
	// kernel file name
	EDITTEXT	IDC_MAIN_KERNEL			75, 5, 40, 12, 
		WS_CHILD | WS_VISIBLE | WS_BORDER | WS_TABSTOP |
		ES_LEFT | ES_AUTOHSCROLL
	// platform select
	COMBOBOX	IDC_MAIN_PLATFORM,		5, 20, 110, 80,
		WS_CHILD | WS_VISIBLE | WS_BORDER | WS_VSCROLL | WS_TABSTOP |
		CBS_DROPDOWN | CBS_AUTOHSCROLL
	// root file system select
	AUTORADIOBUTTON	"wd",	IDC_MAIN_ROOT_WD,	10, 40, 22, 10
	AUTORADIOBUTTON	"sd",	IDC_MAIN_ROOT_SD,	35, 40, 22, 10
	AUTORADIOBUTTON	"md",	IDC_MAIN_ROOT_MD,	60, 40, 22, 10
	AUTORADIOBUTTON	"nfs",	IDC_MAIN_ROOT_NFS,	85, 40, 22, 10
	EDITTEXT	IDC_MAIN_ROOT_MD_OPS		10, 53, 90, 12,
		WS_CHILD | WS_VISIBLE | WS_BORDER | WS_TABSTOP |
		ES_LEFT | ES_AUTOHSCROLL
	GROUPBOX	"root file system"	IDC_MAIN_ROOT_OPTION
							5, 33, 105, 35
	// boot options
	AUTOCHECKBOX	"boot verbosely"	IDC_MAIN_OPTION_V
							5, 59, 120, 9
	AUTOCHECKBOX	"boot to single user"	IDC_MAIN_OPTION_S
							5, 68, 120, 9
	AUTOCHECKBOX	"ask for file name to boot from" IDC_MAIN_OPTION_A
							5, 77, 120, 9
	AUTOCHECKBOX	"break into kernel debugger" IDC_MAIN_OPTION_D
							5, 86, 120, 9
	AUTOCHECKBOX	"serial console",	IDC_MAIN_OPTION_H,
							5, 95, 55, 9
	COMBOBOX	IDC_MAIN_OPTION_H_SPEED		65, 93, 50, 40,
		WS_CHILD | WS_VISIBLE | WS_BORDER | WS_VSCROLL | WS_TABSTOP |
		CBS_DROPDOWN | CBS_AUTOHSCROLL
}

WOption DIALOG DISCARDABLE 0, 0, 0, 0
STYLE WS_CHILD
{
	EDITTEXT	IDC_OPT_AUTO_INPUT, 55, 0, 24, 15,
		WS_CHILD | WS_VISIBLE | WS_BORDER | ES_LEFT
	AUTOCHECKBOX	"Auto Boot",		IDC_OPT_AUTO,	5, 0,  50, 12
	AUTOCHECKBOX	"Reverse Video",	IDC_OPT_VIDEO,	5, 14, 80, 12
	AUTOCHECKBOX	"Pause Before Boot",	IDC_OPT_PAUSE,	5, 26, 80, 12
	AUTOCHECKBOX	"Load Debug Info",	IDC_OPT_DEBUG,	5, 38, 80, 12
	AUTOCHECKBOX	"Safety Message",	IDC_OPT_SAFETY,	5, 50, 80, 12 
	LTEXT		"Extra Kernel Options:"		-1, 5, 62, 80, 12
	EDITTEXT	IDC_OPT_EXTKOPT		5, 74, 120, 12,
		WS_CHILD | WS_VISIBLE | WS_BORDER | WS_TABSTOP |
		ES_LEFT | ES_AUTOHSCROLL
}

