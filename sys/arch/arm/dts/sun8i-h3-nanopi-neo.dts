#include "../../../external/gpl2/dts/dist/arch/arm/boot/dts/sun8i-h3-nanopi-neo.dts"
#include "sun8i-h3.dtsi"

&emac {
	phy-mode = "mii";
	phy = <&phy1>;

	allwinner,use-internal-phy;
	allwinner,leds-active-low;
	status = "okay";

	phy1: ethernet-phy@1 {
		reg = <1>;
	};
};
