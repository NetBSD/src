options 	SCSIVERBOSE	# human readable SCSI error messages
options 	PCI_NETBSD_CONFIGURE	# Do not rely on BIOS/whatever to configure PCI devices
options 	PCI_CONFIGURE_VERBOSE	# Show PCI config information

