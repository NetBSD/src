com2 at pxaip?  addr 0x40700000 intr 20	# Standard UART (for IrDA)

# integrated PCMCIA/CF controller
pxapcic0 at pxaip?

# PCMCIA bus support
pcmcia* at pxapcic?

# PCMCIA (CF) devices
