wsdisplay* at w100lcd? console ?
lcdctl0 at zssp0

# WM8750 Audio
zaudio0 at iic? addr 0x1b
audio* at zaudio?
#options 	ZAUDIO_VOLUME_STRIDE=8

# Audio support
audio* at audiobus?

# integrated 16550 UARTs
options 	COM_PXA2X0
#options 	FFUARTCONSOLE
com0 at pxaip?  addr 0x40100000 intr 22	# Full Function UART
