# The main bus device
mainbus0 at root

# The boot cpu
cpu0 at mainbus?

# integrated peripherals
pxaip0 at mainbus?

pxaintc0 at pxaip?	# interrupt controller
pxagpio0 at pxaip?	# GPIO
pxadmac0 at pxaip?	# DMA controller
pxartc0 at pxaip?	# RTC

# Power management
