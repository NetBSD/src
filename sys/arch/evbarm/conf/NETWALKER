ehci0	  at imxusbc0	unit 0	irq 18 # OTG
ehci1	  at imxusbc0	unit 1	irq 14 # Host1
#ehci2	  at imxusbc0	unit 2	irq 16 # Host2
#ehci3	  at imxusbc0	unit 3	irq 17 # Host3

