# VEXPRESS AXI0
axi0		at mainbus?

# PL011 uart
plcom0          at axi? addr 0x1c090000 irq 37

# PL181 MMCI host controller
plmmc0  	at axi? addr 0x1c050000 irq 41
sdmmc*  	at plmmc0
ld* 		at sdmmc?
