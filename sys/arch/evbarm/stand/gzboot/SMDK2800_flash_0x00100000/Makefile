S=	${.CURDIR}/../../../../..

PLATFORM= SMDK2800
RELOC= 0x00100000
MAXIMAGESIZE= 0		# concatenate
LOADADDR= 0x08200000

CPPFLAGS+= -DCPU_S3C2800
