# AM7990 LANCE
le0	at mainbus0
# MB89532 SPC
spc0	at mainbus0
spc1	at mainbus0		# 2nd SCSI on LUNA-II
# framebuffer
fb0	at mainbus0		# 16 or 256 pseudo color

# Workstation Console attachments
wsdisplay*	at fb?
wskbd*		at ws? console ?
wsmouse*	at ws?

# SCSI bus support
scsibus* at spc?

# SCSI devices
sd* at scsibus? target ? lun ?		# SCSI disks
