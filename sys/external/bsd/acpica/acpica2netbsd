# Execute this at the top of the acpica distribution
# then import it.
#
# cvs import src/sys/external/bsd/acpica/dist intel acpica-YYYYMMDD

if [ -z "$1" ]
then
	echo "Usage: $0 <dir>" 1>&2
	exit 1
fi
cd $1
echo -n "Shuffling things around"

rmdir libraries
mv source/* .
mv components/* .
rmdir source components
echo; echo
