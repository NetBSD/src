.Ft int
.Fn pmc_disable_counter "struct lwp *l" "int ctr"
.Ft int
.Fn pmc_counter_isrunning "struct lwp *l" "int ctr"
.Ft int
.Fn pmc_counter_isconfigured "struct lwp *l" "int ctr"
.Ft int
