.Ft u_int
.Fn ieee80211_ieee2mhz "u_int chan" "u_int flags"
.Ft void
.Fo ieee80211_media_init
.Fa "struct ieee80211com *ic" "ifm_change_cb_t media_change"
.Fa "ifm_stat_cb_t media_stat"
.Fc
