.Xr amiga/grfcv3d 4 ,
.Xr amiga/grfet 4 ,
.Xr amiga/grfrh 4 ,
.Xr amiga/grfrt 4 ,
.Xr amiga/grful 4 ,
.Xr amiga/ite 4 ,
.Xr hp300/grf 4
.Sh BUGS
