		${SORT} | ${MAKEDBM} - ethers.byaddr; \
		${STDETHERS} ${.ALLSRC} | \
		${AWK} 'BEGIN { FS="\t"; OFS="\t"; } { print $$2, $$0 }' | \
		${SORT} | ${MAKEDBM} - ethers.byname; \
		${TOUCH} ${.TARGET}; \
		${ECHO} "updated ethers"; \
		if [ ! ${NOPUSH} ]; then \
			${YPPUSH} -d ${DOMAIN} ethers.byaddr; \
			${YPPUSH} -d ${DOMAIN} ethers.byname; \
			${ECHO} "pushed ethers"; \
		else \
			: ; \
		fi \
