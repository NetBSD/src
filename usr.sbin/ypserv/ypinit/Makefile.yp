		${AWK} 'BEGIN { FS=":"; OFS="\t"; } /^[a-zA-Z0-9_]/ \
		    { print $$1, $$0 }' ${.ALLSRC} | \
		${SORT} | ${MAKEDBM} - group.byname; \
		${AWK} 'BEGIN { FS=":"; OFS="\t"; } /^[a-zA-Z0-9_]/ \
		    { print $$3, $$0 }' ${.ALLSRC} | \
		${SORT} | ${MAKEDBM} - group.bygid; \
		${TOUCH} ${.TARGET}; \
