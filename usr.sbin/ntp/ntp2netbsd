%% NetBSD #

%% srcs html

DIR=html/ntp
FILES=${SRCS}

docinstall::
	${INSTALL} -d -o ${DOCOWN} -g ${DOCGRP} -m ${DOCMODE} ${DESTDIR}/${DOCDIR}/${DIR}

.include <bsd.doc.mk>
%% file lib/libntp/Makefile
%% NetBSD #

LIB=	ntp
%% srcs libntp
SRCS += version.c

CPPFLAGS+=-DHAVE_CONFIG_H -I${.CURDIR}/../../usr.sbin/ntp/include

.include <bsd.lib.mk>
%% file domestic/lib/libntp/Makefile
%% NetBSD #

LIB=	ntp
%% srcs libntp
SRCS += version.c

CPPFLAGS+=-DHAVE_CONFIG_H -I${.CURDIR}/../../../usr.sbin/ntp/include
.PATH: ${.CURDIR}/../../../lib/libntp

.include <bsd.lib.mk>
%% file domestic/lib/libntp/shlib_version
major=0
minor=0
%% file lib/libntp/shlib_version
major=1
minor=0
