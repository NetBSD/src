#!/bin/sh

set -x

case `uname -s` in
Darwin)
	LIBTOOLIZE=glibtoolize
	;;
*)
	LIBTOOLIZE=libtoolize
	;;
esac
	
# Remove autoconf 2.5x's cache directory
rm -rf autom4te*.cache

aclocal -I .                            || exit 1
autoheader                              || exit 1
${LIBTOOLIZE} --force --copy            || exit 1
automake --foreign --add-missing --copy || exit 1
autoconf                                || exit 1
