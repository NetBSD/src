PROG	bin/sh
PROG	bin/tftp

PROG	sbin/disklabel
PROG	sbin/edlabel
PROG	sbin/ifconfig
PROG	sbin/init
PROG	sbin/installboot
PROG	sbin/mknod
PROG	sbin/mount
