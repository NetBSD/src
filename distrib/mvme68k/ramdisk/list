PROG	bin/df
PROG	bin/echo
PROG	bin/ln
PROG	bin/ls
PROG	bin/mkdir
PROG	bin/mt
PROG	bin/mv
PROG	bin/pax		usr/bin/tar
PROG	bin/pwd
