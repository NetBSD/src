#COPY	${CURDIR}/../../notes/pmax/INSTALL.txt	INSTALL.txt

#the lists of obsolete files used by sysinst  
SPECIAL sh ${CURDIR}/../../../../distrib/sets/makeobsolete -b -s ${CURDIR}/../../../distrib/sets -t ./dist
