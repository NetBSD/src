#COPY	${OBJDIR}/install.sh		install
#COPY	${OBJDIR}/upgrade.sh		upgrade
#COPY	${OBJDIR}/start.sh		start
COPY	${CURDIR}/dot.hdprofile		tmp/.hdprofile
