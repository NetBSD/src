COPY	${DESTDIR}/sbin/swapctl		sbin/swapctl
COPY	${DESTDIR}/sbin/sysctl		sbin/sysctl
COPY	${DESTDIR}/sbin/umount		sbin/umount

# miniroot files from /bin:
