# init invokes the shell as -sh
ARGVLN	sh -sh

SPECIAL	dhclient	srcdir	distrib/utils/x_dhclient
SPECIAL	ftp		srcdir	distrib/utils/x_ftp
SPECIAL	ifconfig	srcdir	distrib/utils/x_ifconfig
