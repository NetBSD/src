# libhack.o is built by Makefile & included Makefile.inc
LIBS	libhack.o -lbz2 -ledit -lutil -lcurses -ltermcap -lrmt -lcrypt -ll -lm

# various files that we need in /etc for the install
COPY	${_SRC_TOP_}/usr.sbin/dhcp/clientscript/dhclient-script sbin/dhclient-script

# we need the boot block in /usr/mdec + the MBR copy
COPY	${DESTDIR}/usr/mdec/biosboot_com0.sym	usr/mdec/biosboot_com0.sym

# the disktab explanation file
COPY	${CURDIR}/disktab.preinstall		etc/disktab.preinstall

# the lists of obsolete files used by sysinst
CMD	sh ${_SRC_TOP_}/distrib/sets/makeobsolete -b -s ${_SRC_TOP_}/distrib/sets -t ./dist
