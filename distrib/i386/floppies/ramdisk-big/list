LINK	ramdiskbin			sbin/mount_ntfs
LINK	ramdiskbin			sbin/msdos
LINK	ramdiskbin			sbin/newfs
LINK	ramdiskbin			sbin/nfs
LINK	ramdiskbin			sbin/ntfs
LINK	ramdiskbin			sbin/ping
LINK	ramdiskbin			sbin/ping6
