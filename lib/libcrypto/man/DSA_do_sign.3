.SH "NAME"
DSA_do_sign, DSA_do_verify \- raw DSA signature operations
.SH "LIBRARY"
libcrypto, -lcrypto
.SH "SYNOPSIS"
.PP
.Vb 1
\& #include <openssl/dsa.h>
.Ve
.Vb 1
\& DSA_SIG *DSA_do_sign(const unsigned char *dgst, int dlen, DSA *dsa);
.Ve
