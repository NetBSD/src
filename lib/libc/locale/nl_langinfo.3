.Nd get locale information
.Sh LIBRARY
.Lb libc
.Sh SYNOPSIS
.Fd #include \*[Lt]langinfo.h\*[Gt]
.Ft char *
.Fn nl_langinfo "nl_item item"
.Sh DESCRIPTION
