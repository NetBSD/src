#!/bin/sh

# $NetBSD: dhcpcd,v 1.5.16.1 2020/04/08 14:03:57 martin Exp $

# PROVIDE: dhcpcd
# REQUIRE: network mountcritlocal
# BEFORE:  NETWORKING
# KEYWORD: chrootdir

$_rc_subr_loaded . /etc/rc.subr

name=dhcpcd
rcvar=$name
command=/sbin/$name
extra_commands="reload"

load_rc_config $name

# Work out what pidfile dhcpcd will use based on flags
if [ -n "$flags" ]; then
	myflags=$flags
else
	eval myflags=\$${name}_flags
fi
pidfile=$(eval $command -P $myflags 2>/dev/null)
: ${pidfile:=/var/run/$name.pid}
unset myflags

run_rc_command "$1"
