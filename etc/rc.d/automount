#!/bin/sh
#
# $NetBSD: automount,v 1.1.4.1 2020/04/13 07:45:46 martin Exp $
#

# PROVIDE: automount
# REQUIRE: automountd
# KEYWORD: nojail shutdown

$_rc_subr_loaded . /etc/rc.subr

name="automount"
rcvar="autofs"
start_cmd="automount_start"
stop_cmd="automount_stop"
required_modules="autofs"

automount_start()
{

	/usr/sbin/automount ${automount_flags}
}

automount_stop()
{

	/sbin/umount -At autofs
}

load_rc_config $name
run_rc_command "$1"
