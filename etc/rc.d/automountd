#!/bin/sh
#
# $NetBSD: automountd,v 1.1.4.1 2020/04/13 07:45:46 martin Exp $
#

# PROVIDE: automountd
# REQUIRE: DAEMON
# KEYWORD: nojail

$_rc_subr_loaded . /etc/rc.subr

name="automountd"
rcvar="autofs"
pidfile="/var/run/${name}.pid"
command="/usr/sbin/${name}"
required_modules="autofs"

load_rc_config $name
run_rc_command "$1"
