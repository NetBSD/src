#!/bin/sh
#
# $NetBSD: newsyslog,v 1.3 2002/03/22 04:16:39 lukem Exp $
#

# PROVIDE: newsyslog
# REQUIRE: mountcritremote sysdb
# BEFORE: syslogd

. /etc/rc.subr

name="newsyslog"
rcvar=$name
required_files="/etc/newsyslog.conf"
start_precmd="checkyesno newsyslog"
start_cmd="newsyslog_start"
stop_cmd=":"

newsyslog_start()
{
	echo -n "Trimming log files:"
	/usr/bin/newsyslog -s $rc_flags
	echo " done."
}

load_rc_config $name
run_rc_command "$1"
