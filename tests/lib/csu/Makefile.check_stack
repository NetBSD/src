.PATH: ${CSU_ARCHDIR}
.elif exists(${.PARSEDIR}/arch/${MACHINE_CPU})
CSU_ARCHDIR=	${.PARSEDIR}/arch/${MACHINE_CPU}
.PATH: ${CSU_ARCHDIR}
.endif
.if exists(${CSU_ARCHDIR}/h_initfini_align.S)
SRCS_CHECK_STACK=	h_initfini_align.S
