#!/bin/sh
#
# $NetBSD: mtest,v 1.2 2002/05/13 06:34:15 martti Exp $
#
# multiple rules at the same time

if [ -f /usr/ucb/touch ] ; then
	TOUCH=/usr/ucb/touch
else
	if [ -f /usr/bin/touch ] ; then
		TOUCH=/usr/bin/touch
	else
		if [ -f /bin/touch ] ; then
			TOUCH=/bin/touch
		fi
	fi
fi
echo "$1...";
TESTDIR=$2
[ -z "$2" ] && TESTDIR=${PWD}

/bin/cp /dev/null results/$1

ipftest -br ${TESTDIR}/regress/$1 -i ${TESTDIR}/input/$1 > results/$1
if [ $? -ne 0 ] ; then
	exit 1
fi
echo "--------" >> results/$1

cmp ${TESTDIR}/expected/$1 results/$1
status=$?
if [ $status -ne 0 ] ; then
	exit $status
fi
cmp ${TESTDIR}/expected/$1 results/$1
status=$?
if [ $status -ne 0 ] ; then
	exit $status
fi
$TOUCH $1
exit 0
