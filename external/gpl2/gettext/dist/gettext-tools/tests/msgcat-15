#! /bin/sh

# Test msgcat on a PO file with previous msgids.

tmpfiles=""
trap 'rm -fr $tmpfiles' 1 2 3 15

tmpfiles="$tmpfiles mcat-test15.in"
cat <<\EOF > mcat-test15.in
msgid ""
msgstr ""
"Report-Msgid-Bugs-To: \n"
"Content-Type: text/plain; charset=UTF-8\n"
"Content-Transfer-Encoding: 8bit\n"

#. TRANSLATORS: An error message.
#: src/args.c:242
#, fuzzy, c-format
#| msgid "too many arguments"
msgid "Too many arguments."
msgstr "zu viele Argumente"

#. TRANSLATORS: An error message.
#: src/args.c:247
#, fuzzy, c-format
#| msgid "too many arguments"
msgid "Too few arguments."
msgstr "zu viele Argumente"

# Oder besser "fehlende Argumente"?
#. TRANSLATORS: An error message.
#: src/args.c:273
#, c-format
#| msgid "missing arguments"
msgid "Missing arguments."
msgstr "Argumente fehlen."

#, fuzzy
#~| msgid "%s: invalid option -- %c\n"
#~ msgid "%s: illegal option -- %c\n"
#~ msgstr "%s: ung端ltige Option -- %c\n"

#~ msgid "%s: invalid option -- %c\n"
#~ msgstr "%s: ung端ltige Option -- %c\n"
EOF

tmpfiles="$tmpfiles mcat-test15.out1"
rm -f mcat-test15.out1
: ${MSGCAT=msgcat}
${MSGCAT} -o mcat-test15.out1 mcat-test15.in
test $? = 0 || { rm -fr $tmpfiles; exit 1; }

: ${DIFF=diff}
${DIFF} mcat-test15.in mcat-test15.out1
result=$?

tmpfiles="$tmpfiles mcat-test15.out2"
rm -f mcat-test15.out2
: ${MSGCAT=msgcat}
${MSGCAT} --indent -o mcat-test15.out2 mcat-test15.in
test $? = 0 || { rm -fr $tmpfiles; exit 1; }

tmpfiles="$tmpfiles mcat-test15.ok"
cat <<\EOF > mcat-test15.ok
msgid	""
msgstr	"Report-Msgid-Bugs-To: \n"
	"Content-Type: text/plain; charset=UTF-8\n"
	"Content-Transfer-Encoding: 8bit\n"

#. TRANSLATORS: An error message.
#: src/args.c:242
#, fuzzy, c-format
#| msgid	"too many arguments"
msgid   	"Too many arguments."
msgstr   	"zu viele Argumente"

#. TRANSLATORS: An error message.
#: src/args.c:247
#, fuzzy, c-format
#| msgid	"too many arguments"
msgid   	"Too few arguments."
msgstr   	"zu viele Argumente"

# Oder besser "fehlende Argumente"?
#. TRANSLATORS: An error message.
#: src/args.c:273
#, c-format
#| msgid	"missing arguments"
msgid   	"Missing arguments."
msgstr   	"Argumente fehlen."

#, fuzzy
#~| msgid	"%s: invalid option -- %c\n"
#~ msgid 	"%s: illegal option -- %c\n"
#~ msgstr 	"%s: ung端ltige Option -- %c\n"

#~ msgid	"%s: invalid option -- %c\n"
#~ msgstr	"%s: ung端ltige Option -- %c\n"
EOF

: ${DIFF=diff}
${DIFF} mcat-test15.ok mcat-test15.out2
result=$?

rm -fr $tmpfiles

exit $result
