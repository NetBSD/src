#! /bin/sh

# Test of general operation with Java .properties syntax.

tmpfiles=""
trap 'rm -fr $tmpfiles' 1 2 3 15

tmpfiles="$tmpfiles mu-p-1.in"
cat <<EOF > mu-p-1.in
eight=eighth

five=fifth

four=fourth

one=first

seven=seventh

six=sixth

three=third

two=second
EOF

tmpfiles="$tmpfiles mu-p-1.mo"
: ${MSGFMT=msgfmt}
${MSGFMT} --properties-input -o mu-p-1.mo mu-p-1.in
test $? = 0 || { rm -fr $tmpfiles; exit 1; }

tmpfiles="$tmpfiles mu-p-1.out"
: ${MSGUNFMT=msgunfmt}
${MSGUNFMT} --properties-output -o mu-p-1.out mu-p-1.mo
test $? = 0 || { rm -fr $tmpfiles; exit 1; }

: ${DIFF=diff}
${DIFF} mu-p-1.in mu-p-1.out
result=$?

rm -fr $tmpfiles

exit $result
