#! /bin/sh

# Verify that msgcat leaves #: lines in place even if they have a bizarre
# syntax.

tmpfiles=""
trap 'rm -fr $tmpfiles' 1 2 3 15

tmpfiles="$tmpfiles mcat-test11.in"
cat <<\EOF > mcat-test11.in
#: basctl/source\basicide\basidesh.src#RID_STR_NOMODULE.text
msgid "Simple"
msgstr "Einfach"

#: basctl/source\basicide\basidesh.src:RID_STR_NOMODULE.text
msgid "Different"
msgstr "Anders"

#: file:4
msgid "where"
msgstr "wo"

#: line:4
msgid "what"
msgstr "was"

#: number:4
msgid "who"
msgstr "wer"

#: foobar:4a
msgid "whenever"
msgstr "immer"
EOF

tmpfiles="$tmpfiles mcat-test11.out"
: ${MSGCAT=msgcat}
${MSGCAT} -o mcat-test11.out mcat-test11.in
test $? = 0 || { rm -fr $tmpfiles; exit 1; }

: ${DIFF=diff}
${DIFF} mcat-test11.in mcat-test11.out
result=$?

rm -fr $tmpfiles

exit $result
