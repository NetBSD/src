.INDENT 0.0
.INDENT 3.5
.sp
.nf
.ft C
ftp_baton *baton = (ftp_baton*) malloc(sizeof(ftp_baton));
baton\->req.data = (void*) baton;
baton\->host = strdup("my.webhost.com");
baton\->port = 21;
// ...

