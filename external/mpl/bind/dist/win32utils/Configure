                "LIBUV_LIB",
                "OPENSSL_LIBCRYPTO",
                "OPENSSL_LIBSSL",
                "READLINE_LIB",
                "READLINE_LIBD",
                "ZLIB_LIB");

# DLLs

my %configdll;

my @substdll = ("COMERR_DLL",
                "GSSAPI_DLL",
                "ICONV_DLL",
                "IDN_DLL",
                "KRB5_DLL",
                "K5SPRT_DLL",
                "LIBXML2_DLL",
                "LIBUV_DLL",
                "OPENSSL_DLLCRYPTO",
                "OPENSSL_DLLSSL",
                "WSHELP_DLL",
                "ZLIB_DLL");

# variables

my %configvar = (
	"TOOLS_VERSION" => "4.0",
);

my @substvar = ("BIND9_VERSION",
                "BUILD_MACHINE",
                "BUILD_PLATFORM",
                "COPTI",
                "COPTML",
                "COPTMLD",
                "COPTX",
                "COPTY",
                "DLZ_SYSTEM_TEST",
