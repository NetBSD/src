                   "..\\lib\\win32\\bindevt\\bindevt.vcxproj.filters",
                   "bind9.sln");

# for config.h

my %configdefh;

my @substdefh = ("CONFIGARGS",
                 "DNS_RDATASET_FIXED",
                 "HAVE_GEOIP2",
                 "HAVE_LIBXML2",
                 "USE_BACKTRACE",
                 "USE_OPENSSL",
                 "USE_PKCS11",
                 "HAVE_READLINE",
                 "HAVE_ZLIB",
                 "ISC_LIST_CHECKINIT",
                 "TUNE_LARGE",
                 "WANT_QUERYTRACE",
                 "WITH_IDN",
                 "CPU_RELAX",
                 "VALIDATION_DEFAULT",
    );

# for platform.h

my %configdefp;

my @substdefp = ();

# for conf.sh

my %configtest;

my @substtest = ("CHECKDS",
                 "COVERAGE",
                 "CRYPTO",
                 "DNSTAP",
                 "FSTRM_CAPTURE",
                 "JSONSTATS",
                 "KEYMGR",
                 "NZD_TOOLS",
                 "XMLSTATS",
                 "ZLIB"),

