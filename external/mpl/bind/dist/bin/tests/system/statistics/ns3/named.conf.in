options {
	query-source address 10.53.0.3;
	notify-source 10.53.0.3;
	transfer-source 10.53.0.3;
	port @PORT@;
	directory ".";
	pid-file "named.pid";
	listen-on { 10.53.0.3; };
	listen-on-v6 { none; };
	recursion yes;
	dnssec-validation yes;
	notify yes;
	qname-minimization disabled;
	zone-statistics yes;
};

statistics-channels {
	inet 10.53.0.3 port @EXTRAPORT1@ allow { any; };
};

key rndc_key {
	secret "1234abcd8765";
	algorithm @DEFAULT_HMAC@;
};

controls {
	inet 10.53.0.3 port @CONTROLPORT@ allow { any; } keys { rndc_key; };
};

zone "." {
	type hint;
	file "root.hint";
};

zone "example" {
	type primary;
	allow-update { any; };
	file "internal.db";
};

zone "a-secondary" {
	type secondary;
	file "sec.bk";
	primaries { 10.53.0.1; };
};
