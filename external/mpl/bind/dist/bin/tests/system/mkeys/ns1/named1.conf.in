// NS1

acl allowed {
	! 10.53.0.5;
	any;
};

options {
	query-source address 10.53.0.1;
	notify-source 10.53.0.1;
	transfer-source 10.53.0.1;
	port @PORT@;
	pid-file "named.pid";
	listen-on { 10.53.0.1; };
	listen-on-v6 { none; };
	recursion no;
	notify no;
	dnssec-enable yes;
	dnssec-validation yes;
	allow-query { allowed; };
};

key rndc_key {
	secret "1234abcd8765";
	algorithm hmac-sha256;
};

controls {
	inet 10.53.0.1 port @CONTROLPORT@ allow { any; } keys { rndc_key; };
};

zone "." {
	type master;
	file "root.db.signed";
	allow-update { any; };
	auto-dnssec maintain;
};
