// NS5

include "../../common/rndc.key";

controls {
	inet 10.53.0.5 port @CONTROLPORT@ allow { any; } keys { rndc_key; };
};

options {
	query-source address 10.53.0.5;
	notify-source 10.53.0.5;
	transfer-source 10.53.0.5;
	port @PORT@;
	pid-file "named.pid";
	listen-on { 10.53.0.5; };
	listen-on-v6 { none; };
	recursion no;
	notify yes;
	notify-delay 0;
	servfail-ttl 0;
};

zone "bits" {
	type slave;
	masters { 10.53.0.2; };
	file "bits.bk";
	auto-dnssec maintain;
	inline-signing yes;
};
