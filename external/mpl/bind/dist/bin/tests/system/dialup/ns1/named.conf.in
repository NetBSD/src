controls { /* empty */ };

options {
	query-source address 10.53.0.1;
	notify-source 10.53.0.1;
	transfer-source 10.53.0.1;
	port @PORT@;
	pid-file "named.pid";
	listen-on { 10.53.0.1; };
	listen-on-v6 { none; };
	heartbeat-interval 2;
	recursion no;
	dnssec-validation no;
};

zone "." {
	type master;
	file "root.db";
};

zone "example." {
	type master;
	notify explicit;
	also-notify { 10.53.0.2; };
	dialup yes;
	file "example.db";
};
