        printf "${COLOR_START}%s${COLOR_NONE}\n" "$*"
}
echoend () {
        printf "${COLOR_END}%s${COLOR_NONE}\n" "$*"
}

TESTNAME="`basename $PWD`"

echo_i() {
    echo "$@" | while read LINE ; do
       echoinfo "I:$TESTNAME:$LINE"
    done
}

cat_i() {
    while read LINE ; do
       echoinfo "I:$SYSTESTDIR:$LINE"
    done
}

digcomp() {
