acl rfc1918 { 10/8; 192.168/16; 172.16/12; };

options {
	query-source address 10.53.0.3;
	notify-source 10.53.0.3;
	transfer-source 10.53.0.3;
	port @PORT@;
	pid-file "named.pid";
	listen-on { 10.53.0.3; };
	listen-on-v6 { none; };
	allow-recursion { 10.53.0.3; };
	notify yes;
	dnssec-enable yes;
	dnssec-validation yes;
};

zone "." {
	type master;
	file "root.db";
};

zone "example" {
	type master;
	file "example.db";
};

zone "signed" {
	type master;
	file "signed.db.signed";
};

zone "nsec3" {
	type master;
	file "nsec3.db.signed";
};

zone "redirect" {
	type master;
	file "redirect.db";
};

