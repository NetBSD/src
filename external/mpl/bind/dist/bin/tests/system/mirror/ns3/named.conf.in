key rndc_key {
	secret "1234abcd8765";
	algorithm hmac-sha256;
};

controls {
	inet 10.53.0.3 port @CONTROLPORT@ allow { any; } keys { rndc_key; };
};

options {
	query-source address 10.53.0.3;
	notify-source 10.53.0.3;
	transfer-source 10.53.0.3;
	port @PORT@;
	pid-file "named.pid";
	listen-on { 10.53.0.3; };
	listen-on-v6 { none; };
	recursion yes;
	allow-query-cache { 10.53.0.1; };
	trust-anchor-telemetry yes;
	allow-new-zones yes;
};

zone "." {
	type hint;
	file "../../common/root.hint";
};

zone "." {
	type mirror;
	masters { 10.53.0.1; };
	file "root.db.mirror";
};

zone "initially-unavailable" {
	type mirror;
	masters { 10.53.0.2; };
	file "initially-unavailable.db.mirror";
	use-alt-transfer-source no;
};

zone "verify-axfr" {
	type mirror;
	masters { 10.53.0.2; };
	file "verify-axfr.db.mirror";
};

zone "verify-csk" {
	type mirror;
	masters { 10.53.0.2; };
	file "verify-csk.db.mirror";
};

zone "verify-ixfr" {
	type mirror;
	masters { 10.53.0.2; };
	file "verify-ixfr.db.mirror";
	masterfile-format text;
};

zone "verify-load" {
	type mirror;
	masters { 10.53.0.2; };
	file "verify-load.db.mirror";
	masterfile-format text;
};

zone "verify-reconfig" {
	type mirror;
	masters { 10.53.0.2; };
	file "verify-reconfig.db.mirror";
	masterfile-format text;
};

zone "verify-unsigned" {
	type mirror;
	masters { 10.53.0.2; };
	file "verify-unsigned.db.mirror";
};

zone "verify-untrusted" {
	type mirror;
	masters { 10.53.0.2; };
	file "verify-untrusted.db.mirror";
};

include "../ns1/trusted.conf";
include "../ns2/trusted-mirror.conf";
