key rndc_key {
	secret "1234abcd8765";
	algorithm @DEFAULT_HMAC@;
};

controls {
	inet 10.53.0.2 port @CONTROLPORT@ allow { any; } keys { rndc_key; };
};

options {
	query-source address 10.53.0.2;
	notify-source 10.53.0.2;
	transfer-source 10.53.0.2;
	port @PORT@;
	pid-file "named.pid";
	listen-on { 10.53.0.2; };
	listen-on-v6 { none; };
	recursion no;
	notify yes;
	ixfr-from-differences yes;
	check-integrity no;
	dnssec-validation no;
	allow-query-on { 10.53.0.2; };
	blackhole { 10.53.0.8; };
};

key one {
	algorithm hmac-md5;
	secret "1234abcd8765";
};

key two {
	algorithm hmac-md5;
	secret "1234abcd8765";
};

zone "." {
	type hint;
	file "../../_common/root.hint";
};

zone "example" {
	type primary;
	file "example.db";
};

zone "tsigzone" {
	type primary;
	file "tsigzone.db";
	allow-transfer { !key one; any; };
};
