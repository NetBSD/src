options {
	query-source address 10.53.0.1;
	notify-source 10.53.0.1;
	transfer-source 10.53.0.1;
	port @PORT@;
	session-keyfile "session.key";
	pid-file "named.pid";
	listen-on { 10.53.0.1; };
	listen-on-v6 { none; };
	dnssec-validation yes;
	minimal-responses no;
	recursion no;
	notify yes;
};

key rndc_key {
	secret "1234abcd8765";
	algorithm hmac-sha256;
};

controls {
	inet 10.53.0.1 port @CONTROLPORT@ allow { any; } keys { rndc_key; };
};

zone changed {
	type primary;
	update-policy local;
	file "changed.db";
};

zone unchanged {
	type primary;
	update-policy local;
	file "unchanged.db";
};

zone changed2 {
	type primary;
	update-policy local;
	file "changed2.db";
};

zone unchanged2 {
	type primary;
	update-policy local;
	file "unchanged2.db";
};

zone hdr1d1d2d1d2 {
	type primary;
	update-policy local;
	file "d1212.db";
};

zone hdr1d2d1d2d1 {
	type primary;
	update-policy local;
	file "d2121.db";
};

zone ixfr {
	type primary;
	ixfr-from-differences yes;
	file "ixfr.db";
};

zone maxjournal {
	type primary;
	max-journal-size 1k;
	update-policy local;
	file "maxjournal.db";
};

zone maxjournal2 {
	type primary;
	max-journal-size 1k;
	update-policy local;
	file "maxjournal2.db";
};
