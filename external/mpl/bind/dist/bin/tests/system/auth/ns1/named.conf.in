options {
	query-source address 10.53.0.1;
	notify-source 10.53.0.1;
	transfer-source 10.53.0.1;
	port @PORT@;
	pid-file "named.pid";
	listen-on { 10.53.0.1; };
	listen-on-v6 { none; };
	recursion no;
	notify yes;
};

view main in {
	zone example.net {
		type primary;
		file "example.net.db";
	};

	zone example.com {
		type primary;
		file "example.com.db";
	};
};

view alt chaos {
	zone example.chaos chaos {
		type primary;
		file "chaos.db";
	};
};
