key one {
	algorithm hmac-md5;
	secret "1234abcd8765";
};

key two {
	algorithm hmac-md5;
	secret "1234efgh8765";
};


options {
	port @PORT@;
	pid-file "named.pid";
	listen-on { 10.53.0.2; };
	listen-on-v6 { none; };
	recursion no;
	allow-query { key one; };
};

include "controls.conf";

view "internal" {

	allow-query { key one; };

	zone "." {
		type hint;
		file "../../common/root.hint";
	};

	zone "normal.example" {
		type master;
		file "generic.db";
	};
};
