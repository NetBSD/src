key rndc_key {
	secret "1234abcd8765";
	algorithm @DEFAULT_HMAC@;
};

controls {
	inet 10.53.0.1 port @CONTROLPORT@ allow { any; } keys { rndc_key; };
};

options {
	port @PORT@;
	pid-file "named.pid";
	listen-on { 10.53.0.1; };
	listen-on-v6 { none; };
	allow-query { any; };
	allow-new-zones yes;
	recursion no;
	dnssec-validation no;
};

zone "." {
	type hint;
	file "../../_common/root.hint";
};

zone "inlinesec.example" {
	type primary;
	file "inlinesec.db";
};

zone "." {
	type redirect;
	file "redirect.db";
};
