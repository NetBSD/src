// NS3

options {
	pid-file "named.pid";
	listen-on port @PORT@ { 10.53.0.3; };
	port @PORT@;
	listen-on-v6 { none; };
	recursion no;
	notify no;
	dnssec-validation no;
};

key rndc_key {
	secret "1234abcd8765";
	algorithm @DEFAULT_HMAC@;
};

controls {
	inet 10.53.0.3 port @CONTROLPORT@ allow { any; } keys { rndc_key; };
};

zone "example" {
	type primary;
	masterfile-format raw;
	file "example.db.raw";
};

zone "dynamic" {
	type primary;
	masterfile-format raw;
	file "dynamic.db.raw";
	allow-update { any; };
};
