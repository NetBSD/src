controls { /* empty */ };

options {
	query-source address 10.53.0.1;
	notify-source 10.53.0.1;
	transfer-source 10.53.0.1;
	port 5300;
	pid-file "named.pid";
	listen-on { 10.53.0.1; };
	listen-on-v6 { none; };
	recursion no;
	notify no;
	tkey-domain "server";
	tkey-dhkey "server" KEYID;
	allow-query-cache { any; };
};

key rndc_key {
	secret "1234abcd8765";
	algorithm hmac-sha256;
};

controls {
	inet 10.53.0.1 port 9953 allow { any; } keys { rndc_key; };
};

key "tkeytest." {
	algorithm hmac-md5;
	secret "0123456789ab";
};

zone example {
	type master;
	file "example.db";
	allow-query { key tkeytest.; none; };
};
