options {
	query-source address 10.53.0.1;
	notify-source 10.53.0.1;
	transfer-source 10.53.0.1;
	port @PORT@;
	pid-file "named.pid";
	listen-on { 10.53.0.1; };
	listen-on-v6 { none; };
	recursion no;
	notify yes;
	ixfr-from-differences yes;
};

zone "spf" {
	type master;
	file "spf.db";
};

zone "warn" {
	type master;
	file "spf.db";
	check-spf warn;
};

zone "nowarn" {
	type master;
	file "spf.db";
	check-spf ignore;
};
