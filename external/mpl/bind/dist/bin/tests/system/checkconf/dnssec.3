options {
	dnssec-validation no;
};

view view1 {
	match-clients { any; };
	dnssec-enable no;
};

view view2 {
	match-clients { none; };
	dnssec-enable yes;
};

view view3 {
	match-clients { none; };
	dnssec-validation auto;
};

view view4 {
	match-clients { none; };
	dnssec-lookaside no;
};

view view5 {
	match-clients { none; };
	auto-dnssec off;
};
