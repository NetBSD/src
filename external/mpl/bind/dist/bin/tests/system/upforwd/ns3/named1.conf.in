options {
	query-source address 10.53.0.3;
	notify-source 10.53.0.3;
	transfer-source 10.53.0.3;
	port @PORT@;
	pid-file "named.pid";
	listen-on { 10.53.0.3; };
	listen-on-v6 { none; };
	recursion no;
	notify yes;
	include "dnstap.conf";
};

key rndc_key {
        secret "1234abcd8765";
        algorithm hmac-sha256;
};

controls {
	inet 10.53.0.3 port @CONTROLPORT@ allow { any; } keys { rndc_key; };
};

zone "example" {
	type secondary;
	file "example.bk";
	allow-update-forwarding { 10.53.0.1; };
	primaries { 10.53.0.1; };
};

zone "example2" {
	type secondary;
	file "example2.bk";
	allow-update-forwarding { 10.53.0.1; };
	primaries { 10.53.0.1; };
};

zone "example3" {
	type secondary;
	file "example3.bk";
	allow-update-forwarding { 10.53.0.1; };
	primaries { 10.53.0.1; };
};

zone "nomaster" {
	type secondary;
	file "nomaster1.db";
	allow-update-forwarding { any; };
	masterfile-format text;
	primaries { 10.53.0.4; };
};
