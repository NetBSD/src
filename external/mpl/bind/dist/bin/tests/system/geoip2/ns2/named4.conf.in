// NS2

options {
	query-source address 10.53.0.2;
	notify-source 10.53.0.2;
	transfer-source 10.53.0.2;
	port @PORT@;
	pid-file "named.pid";
	listen-on { 10.53.0.2; };
	listen-on-v6 { fd92:7065:b8e:ffff::2; };
	recursion no;
	dnssec-validation no;
	geoip-directory "../data";
};

key rndc_key {
	secret "1234abcd8765";
	algorithm @DEFAULT_HMAC@;
};

controls {
	inet 10.53.0.2 port @CONTROLPORT@ allow { any; } keys { rndc_key; };
};

view one {
	match-clients { geoip db country continent OC; };
	zone "example" {
		type primary;
		file "example1.db";
	};
};

view two {
	match-clients { geoip db country continent NA; };
	zone "example" {
		type primary;
		file "example2.db";
	};
};

view three {
	match-clients { geoip db country continent EU; };
	zone "example" {
		type primary;
		file "example3.db";
	};
};

view five {
	match-clients { geoip db country continent SA; };
	zone "example" {
		type primary;
		file "example5.db";
	};
};

view seven {
	match-clients { geoip db country continent AF; };
	zone "example" {
		type primary;
		file "example7.db";
	};
};

view none {
	match-clients { any; };
	zone "example" {
		type primary;
		file "example.db.in";
	};
};
