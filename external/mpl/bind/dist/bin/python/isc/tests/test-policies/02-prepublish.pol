policy prepublish_rsa {
	algorithm rsasha1;
	coverage 1y;
	roll-period zsk 3mo;
	pre-publish zsk 2w;
	post-publish zsk 2w;
	roll-period ksk 1y;
	pre-publish ksk 1mo;
	post-publish ksk 2mo;
	keyttl 1h;
	key-size ksk 2048;
	key-size zsk 1024;
};

// Policy that defines a pre-publish period lower than the rollover period
zone good_prepublish.test {
	policy prepublish_rsa;
	coverage 6mo;
	roll-period ksk 4mo;
	pre-publish ksk 1mo;
};

// Policy that defines a pre-publish period equal to the rollover period
zone bad_prepublish.test {
	policy prepublish_rsa;
	coverage 6mo;
	roll-period ksk 4mo;
	pre-publish ksk 4mo;
};


