policy keysize_rsa {
	algorithm rsasha1;
	coverage 1y;
	roll-period zsk 3mo;
	pre-publish zsk 2w;
	post-publish zsk 2w;
	roll-period ksk 1y;
	pre-publish ksk 1mo;
	post-publish ksk 2mo;
	keyttl 1h;
	key-size ksk 2048;
	key-size zsk 1024;
};

policy keysize_dsa {
	algorithm dsa;
	coverage 1y;
	key-size ksk 2048;
	key-size zsk 1024;
};

zone good_rsa.test {
	policy keysize_rsa;
};

zone bad_rsa.test {
	policy keysize_rsa;
	key-size ksk 511;
};

zone good_dsa.test {
	policy keysize_dsa;
	key-size ksk 1024;
	key-size zsk 768;
};

zone bad_dsa.test {
	policy keysize_dsa;
	key-size ksk 1024;
	key-size zsk 769;
};
