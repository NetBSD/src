.include <bsd.own.mk>

SUBDIR=	acpica am-utils bind byacc cron dhcpcd ekermit elftosb \
	fetch file flex less \
	libarchive libevent liblzf libpcap librtld_db mdocml \
	ntp openresolv tcpdump tmux top tre wpa

.if (${MKATF} != "no")
SUBDIR+= atf
.endif
.if (${MKCRYPTO} != "no")
SUBDIR+= pkg_install
.endif
# IP Filter
.if (${MKIPFILTER} != "no")
SUBDIR+=ipf
.endif
.if (${MKISCSI} != "no")
SUBDIR+= iscsi 
.endif
.if (${MKKYUA} != "no")
SUBDIR+= lutok kyua-testers kyua-cli kyua-atf-compat
.endif
.if (${MKLDAP} != "no")
SUBDIR+= openldap
.endif
.if (${MKLIBCXX} != "no")
SUBDIR+= libc++
.endif
.if (${MKLLVM} != "no")
SUBDIR+= llvm
.endif
.if (${MKPCC} != "no")
SUBDIR+= pcc
.endif
.if (${MKDTRACE} != "no" || ${MKCTF} != "no")
SUBDIR+= libproc
.endif

SUBDIR+= blacklist pdisk dhcp nvi ppp smbfs

.include <bsd.subdir.mk>
