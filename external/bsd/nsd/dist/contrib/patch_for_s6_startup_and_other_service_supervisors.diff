+/*
+ * Parse envvar as a positive integer.
+ *
+ */
+int
+get_fd_from_env(const char* key)
+{
+	char *env = getenv(key);
+	if (!env || env[0] == '\0')
+		return -1;
+	errno = 0;
+	char *endptr;
+	int fd = (int)strtol(env, &endptr, 10);
+	if (errno != 0 || endptr[0] != '\0')
+		return -1;
+	return fd;
+}
