#!/bin/sh
echo "run $@" 1>&2

# $1 command
# $2 rulename
# $3 protocol
# $4 address to
# $5 port
# $6 id

case "$1" in
add)
	exec /sbin/npfctl rule $2 add block in final proto $3 from $4 to any port $5
	;;
rem)
	exec /sbin/npfctl rule $2 rem-id $6
	;;
flush)
	exec /sbin/npfctl rule $2 flush
	;;
*)
	echo "$0: Unknown command '$1'" 1>&2
	exit 1
	;;
esac
