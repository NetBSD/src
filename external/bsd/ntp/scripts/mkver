#!/bin/sh
PROG=${1-UNKNOWN}

ConfStr="$PROG"

ConfStr="$ConfStr 4.2.7p404"

case "$CSET" in
 '') ;;
 *) ConfStr="$ConfStr@$CSET" ;;
esac

case "o" in
 '') ;;
 *) ConfStr="${ConfStr}-o" ;;
esac

ConfStr="$ConfStr `LC_TIME=C TZ=UTC date`"

if [ ! -f .version ]; then
  echo 0 > .version
fi
RUN="`cat .version`"
RUN="`expr $RUN + 1`"
echo $RUN > .version

ConfStr="$ConfStr (${RUN})"

echo "Version <${ConfStr}>";

rm -f version.c
cat > version.c << -EoF-
/*
 * version file for $PROG
 */
#include <config.h>
const char * Version = "${ConfStr}";
-EoF-
