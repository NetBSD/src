#	$NetBSD: Makefile,v 1.3.2.1 2011/03/05 15:08:49 bouyer Exp $

.include <bsd.own.mk>

PROG=	ntpdc
MAN=	ntpdc.8
BINDIR=	/usr/sbin

SRCS=	ntpdc.c					\
	ntpdc_ops.c				\
	ntpdc-opts.c


LDADD+=		-L${LIBNTP} -lntp -L${LIBISC} -liscntp -lm -ledit -lterminfo
DPADD+=		${LIBISC}/libiscntp.a ${LIBNTP}/libntp.a ${LIBM} ${LIBUTIL} ${LIBEDIT} ${LIBTERMINFO}

.include "${.CURDIR}/../Makefile.inc"

DIST=${IDIST}/ntpdc

CPPFLAGS+=-I${IDIST}/include -I${IDIST}/libopts

.PATH: ${DIST}

ntpdc.8:	ntpdc.1
	${_MKTARGET_BUILD}
	${TOOL_SED} -e "s,NTPDC 1,NTPDC 8," $? > $@

CLEANFILES+=ntpdc.8

.include <bsd.prog.mk>
