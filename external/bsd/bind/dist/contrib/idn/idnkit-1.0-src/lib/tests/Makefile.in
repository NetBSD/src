	$(LIBTOOL) --mode=link $(CC) $(LDFLAGS) -o $@ \
		api.lo $(COMMONOBJS) $(IDNLIB) $(ICONVLIB)
api.lo: api.c testconfig.h
	$(LIBTOOL) --mode=compile $(CC) $(CFLAGS) -c api.c

