set testname "ASSERT"

if ![ld_assemble $as $srcdir/$subdir/assert.s tmpdir/assert.o] {
    unresolved $testname
    return
}

if ![ld_simple_link $ld tmpdir/assert "-T $srcdir/$subdir/assert.t tmpdir/assert.o"] {
    fail $testname
} else {
    pass $testname
}

