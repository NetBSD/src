# sh testcase for sts.l fpscr, @-$rn -*- Asm -*-
# mach: all
# as: -isa=shcompact
# ld: -m shelf32

	.include "compact/testutils.inc"

	start

	.global stsl_fpscr
stsl_fpscr:
	mov #40, r0
	shll8 r0
	# Preserve r0.
	mov r0, r7
	sts.l fpscr, @-r0

check:
	# Ensure r0 is decremented.
	add #4, r0
	cmp/eq r0, r7
	bf wrong

okay:	
	pass
wrong:
	fail
	
