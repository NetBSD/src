# sh testcase for madd.l $rm, $rn, $rd -*- Asm -*-
# mach: all
# as: -isa=shmedia
# ld: -m shelf64

	.include "media/testutils.inc"

	start

init:
	pta wrong, tr0

maddl:
	# Load { 1 2 } into r0.
	_packl 1, 2, r0
	# Load { 3 4 } into r1.
	_packl 3, 4, r1
	
	# Add slices to produce { 4 6 }.
	madd.l r0, r1, r2

	_packl 4, 6, r3
	bne r2, r3, tr0

okay:
	pass

wrong:
	fail
