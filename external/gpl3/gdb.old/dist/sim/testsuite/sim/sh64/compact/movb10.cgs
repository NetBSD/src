# sh testcase for mov.b @($imm4, $rm), r0 -*- Asm -*-
# mach: all
# as: -isa=shcompact
# ld: -m shelf32

	.include "compact/testutils.inc"

	start
	mov #30, r1
	shll8 r1
	# Store something there first.
	mov #0, r0
	or #170, r0
	mov r0, r7
	mov.b r0, @(3, r1)
	# Load it back.
	mov.b @(3, r1), r0
	and #255, r0
	cmp/eq r0, r7
	bf wrong

okay:
	pass
wrong:	
	fail
