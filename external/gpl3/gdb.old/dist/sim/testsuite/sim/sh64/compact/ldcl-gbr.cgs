# sh testcase for ldc.l @${rn}+, gbr -*- Asm -*-
# mach: all
# as: -isa=shcompact
# ld: -m shelf32

	.include "compact/testutils.inc"

	start

	.global ldcl
ldcl:
	mov #40, r0
	shll8 r0
	# Preserve address.
	mov r0, r1
	ldc.l @r0+, gbr

	# Add 4 to saved address (r1).
	# Then compare with r0.
	add #4, r1
	cmp/eq r0, r1
	bf wrong

okay:
	pass

wrong:
	fail
