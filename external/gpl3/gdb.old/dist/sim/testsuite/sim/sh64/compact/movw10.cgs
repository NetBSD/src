# sh testcase for mov.w @($imm8x2, pc), $rn -*- Asm -*-
# mach: all
# as: -isa=shcompact
# ld: -m shelf32

	.include "compact/testutils.inc"

	start

	# Build up a distinctive bit pattern.
	mov #1, r2
	shll8 r2
	add #12, r2

	# Store to memory.
	mov #16, r1
	shll8 r1
	add #32, r1
	mov.w r2, @r1

check:
	# Read it back.
	mov.w @(18, pc), r0
	shll16 r0
	shll16 r2
	cmp/eq r0, r2
	bf wrong

okay:
	pass
wrong:
	fail
