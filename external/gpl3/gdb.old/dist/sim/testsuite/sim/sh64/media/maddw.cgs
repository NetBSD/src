# sh testcase for madd.w $rm, $rn, $rd -*- Asm -*-
# mach: all
# as: -isa=shmedia
# ld: -m shelf64

	.include "media/testutils.inc"

	start
init:
	pta wrong, tr0

maddw:
	# Load { 1 2 3 4 } into R0.
	_packw 1, 2, 3, 4, r0

	# Load { 3 4 5 6 } into R1.
	_packw 3, 4, 5, 6, r1

	# Add slices to produce { 4 6 8 10 }.
	madd.w r0, r1, r2

	_packw 4, 6, 8, 10, r3
	bne r2, r3, tr0

okay:
	pass
	
wrong:
	fail
