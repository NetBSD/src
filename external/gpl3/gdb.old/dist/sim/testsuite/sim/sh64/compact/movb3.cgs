# sh testcase for mov.b $rm, @(r0,$rn) -*- Asm -*-
# mach: all
# as: -isa=shcompact
# ld: -m shelf32

	.include "compact/testutils.inc"

	start
	mov #40, r2
	shll8 r2
	mov #3, r1
	mov #0, r0
	or #170, r0
	mov r0, r3
	mov r2, r0
	mov.b r3, @(r0, r1)

	# Load the value back into a different register.
	mov.b @(r0, r1), r4
	# Check the lowest order byte matches the stored value.
	mov r4, r0
	and #255, r0
	cmp/eq r0, r3
	bf wrong

okay:	
	pass

wrong:
	fail
