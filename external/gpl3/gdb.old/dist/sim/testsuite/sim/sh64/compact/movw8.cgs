# sh testcase for mov.w @(r0, $rm), $rn -*- Asm -*-
# mach: all
# as: -isa=shcompact
# ld: -m shelf32

	.include "compact/testutils.inc"

	start
	mov #30, r0
	shll8 r0
	mov #10, r1

	# Store something first.
	# Build up a distinctive bit pattern.
	mov #1, r2
	shll8 r2
	add #12, r2
	
	mov.w r2, @(r0, r1)
check:
	# Read it back.
	mov.w @(r0, r1), r3
	shll16 r2
	shll16 r3
	cmp/eq r2, r3
	bf wrong

okay:
	pass
wrong:
	fail
