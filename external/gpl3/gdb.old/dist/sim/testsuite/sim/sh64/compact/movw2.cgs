# sh testcase for mov.w $rm, @-$rn -*- Asm -*-
# mach: all
# as: -isa=shcompact
# ld: -m shelf32

	.include "compact/testutils.inc"

	start

	mov #30, r1
	shll8 r1
	# Preserve.
	mov r1, r7
init:
	# Build up a distinctive bit pattern.
	mov #1, r2
	shll8 r2
	add #12, r2
store:	
	mov.w r2, @-r1
check:
	# Read it back.
	mov.w @r1, r3
	shll16 r2
	shll16 r3
	cmp/eq r2, r3
	bf wrong
dec:
	add #2, r1
	cmp/eq r7, r1
	bf wrong

okay:
	pass
wrong:
	fail
