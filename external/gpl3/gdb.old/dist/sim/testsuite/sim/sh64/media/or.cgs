# sh testcase for or $rm, $rn, $rd -*- Asm -*-
# mach: all
# as: -isa=shmedia
# ld: -m shelf64

	.include "media/testutils.inc"

	start
init:
	pta wrong, tr0

or1:
	movi 0, r0
	or r0, r0, r1
	bnei r1, 0, tr0

or2:
	movi 0, r0
	movi 1, r1
	or r0, r1, r2
	bnei r2, 1, tr0

or3:
	movi 1, r0
	movi 0, r1
	or r0, r1, r2
	bnei r2, 1, tr0

or4:
	movi 1, r0
	or r0, r0, r1
	bnei r1, 1, tr0

or5:
	movi 1, r0
	shlli r0, 63, r0
	movi 1, r1
	or r0, r1, r2

okay:
	pass

wrong:
	fail
