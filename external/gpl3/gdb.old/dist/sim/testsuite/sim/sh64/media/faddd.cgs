# sh testcase for fadd.d $drg, $drh, $drf -*- Asm -*-
# mach: all
# as: -isa=shmedia
# ld: -m shelf64

	.include "media/testutils.inc"

	start

init:
	pta wrong, tr0
	movi 2, r0
	movi 3, r1

fadd0:
	# Add 2 and 3.
	fmov.ls r0, fr7
	float.ld fr7, dr0
	fmov.ls r1, fr7
	float.ld fr7, dr2
	fadd.d dr0, dr2, dr4
	# Check to make sure we got 5.
	movi 5, r2
	fmov.ls r2, fr7
	float.ld fr7, dr6
	fcmpeq.d dr4, dr6, r7
	bnei r7, 1, tr0

okay:	
	pass

wrong:
	fail
