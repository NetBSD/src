# cr16 testcase for sbitw
# mach:	 cr16

	.include "testutils.inc"

	start

       .global sbitw
sbitw:
	sbitw	$4,_y
	loadw   _y, r1
	cmpb    $0x1f, r1
	beq ok1
not_ok:
	fail

ok1:
	movd   $_y, (r1,r0)
	sbitw	$5,0(r1,r0)
	loadw   _y, r1
	cmpb    $0x3f, r1
	beq ok2
	br not_ok
ok2:

	movw   $_y, r1
	sbitw	$6,0(r1)
	loadw   _y, r1
	cmpb    $0x7f, r1
	beq ok3
	br not_ok
ok3:
	pass

_y:	.word	0x0f
