ifeq ($(ARCH),IA64)
OBJS=ia64-dis.obj,ia64-opc.obj
ARCHDEF="ARCH_ia64"
endif
ifeq ($(ARCH),ALPHA)
OBJS=alpha-dis.obj,alpha-opc.obj
ARCHDEF="ARCH_alpha"
endif
ifeq ($(ARCH),VAX)
OBJS=vax-dis.obj
ARCHDEF="ARCH_vax"
endif

OBJS:=$(OBJS),dis-init.obj,dis-buf.obj,disassemble.obj

ifeq ($(CC),gcc)
DEFS=/define=($(ARCHDEF))
CFLAGS=/include=([],[-.include],[-.bfd])$(DEFS)
else
DEFS=/define=($(ARCHDEF))
OPT=/noopt/debug
CFLAGS=$(OPT)/include=([],"../include",[-.bfd])$(DEFS)\
 /name=(as_is,shortened)
endif

libopcodes.olb: $(OBJS)
	purge
	lib/create libopcodes *.obj

clean:
	$$ purge
	$(RM) *.obj;
	$(RM) libopcodes.olb;
