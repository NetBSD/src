# cr16 testcase for cbitb $bit_pos, ABS/REGP/REG
# mach:	 cr16

	.include "testutils.inc"

	start

	.global cbitb
cbitb:
	cbitb	$0,_y
	loadw   _y, r1
	cmpb    $0xfe, r1
	beq ok1
not_ok:
	fail

ok1:
	movd   $_y, (r1,r0)
	cbitb	$1,0(r1,r0)
	loadw   _y, r1
	cmpb    $0xfc, r1
	beq ok2
	br not_ok
ok2:

	movw   $_y, r1
	cbitb	$2,0(r1)
	loadw   _y, r1
	cmpb    $0xf8, r1
	beq ok3
	br not_ok
ok3:
	pass

_y:	.word	0xff
