> # Regular cases, ASCII.
> host A@B
"A@B" -> "A@b"
> user A@B
"A@B" -> "a@B"
> all A@B
"A@B" -> "a@b"
> none A@B
"A@B" -> "A@B"
> # Corner cases, ASCII.
> host A
"A" -> "A"
> host A@
"A@" -> "A@"
> host @
"@" -> "@"
> user @B
"@B" -> "@B"
> user @
"@" -> "@"
> all @
"@" -> "@"
> user Δημοσθένους@Δημοσθένους.EXAMPLE.COM
"Δημοσθένους@Δημοσθένους.EXAMPLE.COM" -> "δημοσθένουσ@Δημοσθένους.EXAMPLE.COM"
> host Δημοσθένους@Δημοσθένους.EXAMPLE.COM
"Δημοσθένους@Δημοσθένους.EXAMPLE.COM" -> "Δημοσθένους@δημοσθένουσ.example.com"
> all Δημοσθένους@Δημοσθένους.EXAMPLE.COM
"Δημοσθένους@Δημοσθένους.EXAMPLE.COM" -> "δημοσθένουσ@δημοσθένουσ.example.com"
> user Δημοσθένους@
"Δημοσθένους@" -> "δημοσθένουσ@"
> user Δημοσθένους
"Δημοσθένους" -> "δημοσθένουσ"
> host Δημοσθένους@
"Δημοσθένους@" -> "Δημοσθένους@"
> host @Δημοσθένους.EXAMPLE.COM
"@Δημοσθένους.EXAMPLE.COM" -> "@δημοσθένουσ.example.com"
